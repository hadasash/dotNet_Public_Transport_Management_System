<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="egged " Height="450" Width="550" Icon="אגד.png">

    <Grid>
        <GroupBox Header="Choose Option:"  HorizontalAlignment="Left" Height="115" Margin="24,170,0,0" VerticalAlignment="Top" Width="333" FontSize="16" FontFamily="Arial" FontWeight="Bold">
            <StackPanel Margin="50,10,-2.2,33.8">
                <RadioButton x:Name ="rbStations" Content="Bus Stations" Height="24" Width="300" IsChecked="True"/>
                <RadioButton x:Name ="rbLines" Content="Bus Lines" Height="23" Margin="0,0,-10.8,0" HorizontalAlignment="Right" Width="282"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnGO" Content="GO" HorizontalAlignment="Left" Height="42" Margin="50,324,0,0" VerticalAlignment="Top" Width="228" FontSize="16" FontFamily="Arial" Click="btnGO_Click" RenderTransformOrigin="0.613,0.454" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" FrameworkElement.FlowDirection="RightToLeft">
                    <GradientStop Color="ForestGreen" Offset="1"/>
                    <GradientStop Color="#FF13BFA3"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Grid HorizontalAlignment="Left" Height="108" Margin="0,29,0,0" VerticalAlignment="Top" Width="544" >
            <MediaElement x:Name="media" Source="" LoadedBehavior="Play" IsMuted="True" Margin="0,0,0,-28" Stretch="Fill" UnloadedBehavior="Play">
            </MediaElement>
        </Grid>

    </Grid>
</Window>
